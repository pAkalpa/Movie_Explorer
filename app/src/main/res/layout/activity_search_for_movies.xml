    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/retrieveButton"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginEnd="77dp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/be_vietnam_pro"
            android:padding="4dp"
            android:text="@string/retrieve_movie"
            android:textAllCaps="false"
            android:textColor="@color/white_75" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/be_vietnam_pro"
            android:padding="4dp"
            android:text="@string/save_movie_to_database"
            android:textAllCaps="false"
            android:textColor="@color/white_75" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/messageLl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:gravity="center"
        android:visibility="visible"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/messageIv"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginBottom="5dp"
            android:contentDescription="@string/icon"
            android:src="@drawable/seek" />

        <TextView
            android:id="@+id/messageTvA1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semi_bold"
            android:text="@string/we_are_sorry_we_can_nnot_find_the_movie"
            android:textColor="@color/white_75"
            android:textSize="25sp"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/find_your_movie_by_title"
            android:textAlignment="center"
            android:textColor="@color/white_75" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/movieDataLl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/posterIv"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:background="@drawable/round_outline"
            android:clipToOutline="true"
            android:scaleType="centerInside"
            android:src="@drawable/n_a" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/title"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white_75" />

                <TextView
                    android:id="@+id/titleTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white_75" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/year"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white_75" />

                <TextView
                    android:id="@+id/yearTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white_75" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/rated"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white_75" />

                <TextView
                    android:id="@+id/ratedTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white_75" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/released"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white_75" />

                <TextView
                    android:id="@+id/releasedTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white_75" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/runtime"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white_75" />

                <TextView
                    android:id="@+id/runtimeTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white_75" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/genre"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white_75" />

                <TextView
                    android:id="@+id/genreTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white_75" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/director"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white_75" />

                <TextView
                    android:id="@+id/directorsTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white_75" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/writer"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white_75" />

                <TextView
                    android:id="@+id/writersTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white_75" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/actors"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white_75" />

                <TextView
                    android:id="@+id/actorsTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white_75" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/plot"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white_75" />

                <TextView
                    android:id="@+id/plotTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white_75" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>